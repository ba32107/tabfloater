{
  "name": "tabfloater",
  "version": "0.5.0",
  "description": "Picture-in-Picture for ANY tab!",
  "private": true,
  "scripts": {
    "lint": "npx eslint src/js",
    "postinstall": "run-script-os",
    "postinstall:nix": "./postinstall.sh",
    "postinstall:windows": "mkdir src\\libs\\webextension-polyfill && copy node_modules\\webextension-polyfill\\dist\\*.min.js* src\\libs\\webextension-polyfill"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tabfloater/tabfloater.git"
  },
  "keywords": [
    "chrome-extension",
    "firefox-addon",
    "firefox-extension",
    "picture-in-picture",
    "floating-window"
  ],
  "author": "Balazs Gyurak",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/tabfloater/tabfloater/issues"
  },
  "homepage": "https://github.com/tabfloater/tabfloater#readme",
  "dependencies": {
    "uikit": "^3.4.6",
    "webextension-polyfill": "^0.6.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "run-script-os": "^1.1.1",
    "sass": "^1.26.5"
  }
}
