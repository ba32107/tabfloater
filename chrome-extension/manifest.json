{
  "name": "TabFloater",
  "version": "0.3",
  "description": "Extract your tabs to a floating panel",
  "permissions": [
    "activeTab",
    "nativeMessaging",
    "notifications",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "companion.js",
      "floater.js",
      "background.js",
      "utilities.js",
      "qq.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "TabFloater",
    "default_icon": {
      "16": "images/icons/16.png",
      "32": "images/icons/32.png",
      "48": "images/icons/48.png",
      "128": "images/icons/128.png"
    }
  },
  "commands": {
    "key-pageDown": {
      "suggested_key": {
        "default": "Alt+PageDown"
      },
      "description": "Float tab"
    },
    "key-pageUp": {
      "suggested_key": {
        "default": "Alt+PageUp"
      },
      "description": "Unfloat tab"
    }
  },
  "icons": {
    "16": "images/icons/16.png",
    "32": "images/icons/32.png",
    "48": "images/icons/48.png",
    "128": "images/icons/128.png"
  },
  "manifest_version": 2
}